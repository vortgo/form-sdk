doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
        title pay_form.page.title
    body(lang='de')

        h1.header Enter your Credit Card details:

        .decline
            span.close
            p.decline-title
            p.decline-text

        .card-brands
            i.verve
            i.visa
            i.master-card
            i.maestro
            i.american-express
            i.jcb
            i.diners-club
            i.discover
            i.aura
            i.elo
            i.hiper-card
            i.nspk-mir

        block form

        <input type="hidden" id="signedpay-purchase-status-url" value="{{ url('form_status', {"token": order.payFormToken}) }}" />

        .secure-info

        script.
            function handleInputFocus(focus) {
                var date_exp = document.getElementById('card-exp-date-combined');
                date_exp.className = date_exp.className.replace('focused', '');
                if (focus) {
                    date_exp.className += 'focused';
                }
            }
